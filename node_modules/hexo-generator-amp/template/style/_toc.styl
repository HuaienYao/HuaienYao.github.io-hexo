//-----------------------------
// TOC for hexo-toc
//-----------------------------
.entry-content
  .toc
    background: color-background
    padding: font-size * 0.5
    margin: content-margin 0
    border: 1px solid color-h-border
    border-radius: 2px
    box-shadow: 1px 1px 10px darken(color-background, 10)

    ul
      margin-bottom: 0
      padding: 0
      margin: 0
      border: none
      border-radius: 2px
      box-shadow: none

      &:first-child
        border-top: none
      ul,ol
        margin-bottom: 0
        padding: 0
        margin: 0
      li
        padding: 0
        margin: 0
        border: none

        &:first-child
          border-top: none

        &::after, &::before
          content: normal
        a
          font-size: font-size * 0.9
          line-height: font-size * 1.8
          font-weight: bold
          display: block
          padding: font-size * 0.6 0 font-size * 0.6 font-size * 2
          background-color: color-background
          color: color-default
          border: none
          utilAni(0.3s)
          &:hover
            background-color: color-h-weak
          &:before
            content: "\f02d"
            font-family: font-awesome
            display: inline-block
            padding: 0
            margin: 0
            margin-right: font-size * 0.8
            position: absolute
            left: font-size * 0.5
            color: color-h
            font-weight: normal

        ul,ol
          margin-bottom: 0
          padding: 0
          margin: 0

          li
            a
              padding: font-size * 0.5 font-size * 0.75 font-size * 0.5 font-size * 2.7
              font-size: font-size * 0.9
              &:before
                content: "\f0da"
                font-family: font-awesome
                display: inline-block
                padding: 0
                margin: 0
                margin-right: font-size * 0.6
                position: absolute
                left: font-size * 1.5
                color: color-h
            ul
              li
                a
                  padding: font-size * 0.5 font-size * 0.75 font-size * 0.5 font-size * 4
                  &:before
                    content: none
